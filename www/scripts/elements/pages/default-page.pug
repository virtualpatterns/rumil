extends ./stacked-page.pug
block back
  | Back
block center
  | Features
block contents
  ons-list(modifier='inset')
    //- ons-list-item(  id='goPop',
    //-                 modifier='longdivider',
    //-                 tappable)
    //-   | Pop
    ons-list-item(  id='goStatus',
                    modifier='chevron longdivider',
                    tappable)
      | Status
    if application.isCacheEnabled
      ons-list-item(  id='goCache',
                      modifier='chevron longdivider',
                      tappable)
        | Updates
    ons-list-item(  id='goTests',
                    modifier='chevron longdivider',
                    tappable)
      | Tests
    ons-list-item(  id='goCoverage',
                    modifier='chevron longdivider',
                    tappable)
      | Coverage
    ons-list-item(  id='goCountDown',
                    modifier='longdivider',
                    tappable)
      | Countdown&nbsp;
      span(id='countDown')
        span(style='font-style: italic;')
          | n
      | &nbsp;seconds
    //- ons-list-item(  id='goBlink',
    //-                 modifier='chevron longdivider',
    //-                 tappable)
    //-   | Blink

  ons-list(modifier='inset')
    ons-list-header
      | DIALOGS
    ons-list-item(  id='goAlert',
                    modifier='longdivider',
                    tappable)
      | Alert
    ons-list-item(  id='goConfirmation',
                    modifier='longdivider',
                    tappable)
      | Confirmation
    ons-list-item(  id='goSpinner',
                    modifier='longdivider',
                    tappable)
      | Spinner

  ons-list(modifier='inset')
    ons-list-header
      | LOGIN
    ons-list-item(  id='goSimple',
                    modifier='chevron longdivider',
                    tappable)
      div.left
        ons-icon( icon='fa-circle-thin',
                  size='20px')
      div.center
        | Simple
    ons-list-item(  id='goOAuth2',
                    modifier='chevron longdivider',
                    tappable)
      div.left
        ons-icon( icon='fa-lock',
                  size='20px')
      div.center
        | OAuth2
    ons-list-item(  id='goGitHub',
                    modifier='chevron longdivider',
                    tappable)
      div.left
        ons-icon( icon='fa-github',
                  size='20px')
      div.center
        | GitHub
    ons-list-item(  id='goGoogle',
                    modifier='chevron longdivider',
                    tappable)
      div.left
        ons-icon( icon='fa-google',
                  size='20px')
      div.center
        | Google
    ons-list-item(  id='goTwitter',
                    modifier='chevron longdivider',
                    tappable)
      div.left
        ons-icon( icon='fa-twitter',
                  size='20px')
      div.center
        | Twitter
